<script type="text/javascript">
    let pictogramList = document.createElement('ul');
    const header = new Headers();
    header.append('authorization', `Bearer ${localStorage.token}`);

    fetch('/api/pictograms', {
        method: 'GET',
        headers: header
    })
    .then(res => res.json())
    .then(data => {
        data.pictograms.map(pictogram => {
            let text = document.createTextNode(pictogram.name);
            let elem = document.createElement('li');
            elem.appendChild(text);
            pictogramList.appendChild(elem)
        });
        document.body.appendChild(pictogramList)
    })
</script>